<!DOCTYPE html>
<html lang="ko">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="https://unpkg.com/mvp.css@1.12/mvp.css" />
    <style>
      input {
        margin-bottom: 0;
      }
      input[type="button"] {
        cursor: pointer;
      }
      input[type="button"]:hover {
        background-color: #333;
        color: #fff;
      }
      td[name="url"] {
        cursor: pointer;
      }
    </style>
    <title><%=title%></title>
  </head>
  <body>
    <header>
      <h1>단축 URL 생성기@<%=user%></h1>
    </header>
    <section>
      <table>
        <thead>
          <tr>
            <th></th>
            <th>
              <label for="url">URL</label>
            </th>
            <th>
              <label for="explanation">설명</label>
            </th>
            <th>등록</th>
          </tr>
        </thead>
        <tr>
          <td></td>
          <td>
            <input type="url" id="url" />
          </td>
          <td>
            <input type="text" id="explanation" />
          </td>
          <td>
            <input onclick="post()" type="submit" value="등록" />
          </td>
        </tr>
      </table>
    </section>
    <section>
      <div><br /></div>
      <h2>　</h2>
    </section>
    <section>
      <table>
        <thead>
          <tr>
            <th>No</th>
            <th>단축</th>
            <th>URL</th>
            <th>설명</th>
            <th>접속자 수</th>
            <th>생성일</th>
            <th>접속일</th>
            <th>삭제</th>
          </tr>
        </thead>
        <tbody></tbody>
      </table>
    </section>
    <footer>
      © <a href="https://github.com/yongseok-dev">github.com/yongseok-dev </a>
    </footer>
    <script>
      const list = [
        <% list.forEach((row,i)=>{ %> {
          <% Object.keys(row).forEach(element=>{
            %><%=element%>:"<%-row[element]%>",<%
          }) %>
        }, <%})%>
      ];

      function renderList(list) {
        const table = document.querySelector(
          "body > section:nth-child(4) > table > tbody"
        );
        table.innerHTML = "";
        const header = [
          "idx",
          "url_short",
          "url_long",
          "explanation",
          "count",
          "created_at",
          "updated_at",
          "id",
        ];
        list.forEach((row, idx) => {
          const tr = document.createElement("tr");
          header.forEach((key) => {
            const td = document.createElement("td");
            td.innerHTML = key === "idx" ? idx + 1 : row[key];
            if (key==="url_short") {
              td.style.cursor = "pointer"
              td.addEventListener("click",(e)=>{
                copy(row[key])
              })
            }else if (key==="id") {
              const bt = document.createElement("input")
              bt.type = "button"
              bt.value = "삭제"
              td.addEventListener("click",(e)=>{
                remove(row[key])
              })
              td.innerHTML="";
              td.appendChild(bt);
            }
            tr.appendChild(td);
          });
          table.appendChild(tr);
        });
      }
      renderList(list);

      function post() {
        const url = document.getElementById("url");
        const explanation = document.getElementById("explanation");
        fetch("./url", {
          method: "POST",
          headers: {
            "Content-Type": "application/json",
          },
          body: JSON.stringify({
            url: url.value,
            explanation: explanation.value,
          }),
        })
          .then((response) => response.json())
          .then((data) => {
            if (!!data.err) {
              throw new Error("저장 실패" + data.err);
            }
            renderList(data.list);
            url.value = "";
            explanation.value = "";
            copy(data.list[data.list.length - 1].url_short);
          })
          .catch((error) => {
            console.error(error);
          });
      }

      function remove(id) {
        const url = document.getElementById("url");
        const explanation = document.getElementById("explanation");
        fetch("./url", {
          method: "DELETE",
          headers: {
            "Content-Type": "application/json",
          },
          body: JSON.stringify({
            id: Number(id),
          }),
        })
          .then((response) => response.json())
          .then((data) => {
            if (!!data.err) {
              throw new Error("삭제 실패" + data.err);
            }
            renderList(data.list);
          })
          .catch((error) => {
            console.error(error);
          });
      }

      const domain = window.location;
      function copy(text) {
        navigator.clipboard
          .writeText(domain + text)
          .then(() => {
            console.log("단축 주소가 복사되었습니다.");
          })
          .catch((err) => {
            console.error("복사 실패: ", err);
          });
      }
    </script>
  </body>
</html>
